@page "/cart"
@layout TiendaLayout
@inject ICarritoServicio carritoServicio
@inject IVentaServicio ventaServicio
@inject IToastService toastService
@inject NavigationManager _navServicio
@using Microsoft.AspNetCore.Components.Authorization


<div class="container-fluid py-4">
    <h1 class="cart-title">
        <i class="bi bi-bag-fill"></i>Mi Carrito
    </h1>

    <div class="row g-4">
        <!-- Productos del Carrito -->
        <div class="col-lg-8">
            @if (lista.Any())
            {
                <div class="card border-0 shadow-lg">
                    <div class="card-header bg-danger text-white py-3">
                        <h5 class="m-0 fw-bold"><i class="bi bi-bag me-2"></i>Productos (@lista.Count)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 100px;">Imagen</th>
                                        <th>Producto</th>
                                        <th>Precio</th>
                                        <th>Cantidad</th>
                                        <th>Total</th>
                                        <th style="width: 50px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in lista)
                                    {
                                        <tr class="cart-item-row">
                                            <td>
                                                <img src="@item.Producto?.Imagen" alt="@item.Producto?.Nombre" class="cart-product-image">
                                            </td>
                                            <td>
                                                <div class="product-name">@item.Producto?.Nombre</div>
                                                <small class="product-id">ID: @item.Producto?.IdProducto</small>
                                            </td>
                                            <td>
                                                <span class="product-price">S/. @item.Precio</span>
                                            </td>
                                            <td>
                                                <div class="quantity-group">
                                                    <button class="btn btn-outline-danger btn-sm" type="button" @onclick="(() => Disminuir(item.Producto?.IdProducto ?? 0))">
                                                        <i class="bi bi-dash"></i>
                                                    </button>
                                                    <input type="text" class="form-control text-center quantity-input" readonly value="@item.Cantidad" />
                                                    <button class="btn btn-outline-danger btn-sm" type="button" @onclick="(() => Aumentar(item.Producto?.IdProducto ?? 0))">
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="item-total">S/. @item.Total</span>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-danger" @onclick="(async () => await Eliminar(item.Producto?.IdProducto ?? 0))" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <a href="/catalogo" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Continuar Comprando
                    </a>
                </div>
            }
            else
            {
                <div class="empty-cart-container">
                    <div class="empty-cart-icon">
                        <i class="bi bi-bag"></i>
                    </div>
                    <h4 class="empty-cart-title">Tu carrito está vacío</h4>
                    <p class="empty-cart-text">No tienes productos en tu carrito. ¡Explora nuestras ofertas!</p>
                    <a href="/catalogo" class="btn btn-danger btn-lg">
                        <i class="bi bi-shop me-2"></i>Ir a Comprar
                    </a>
                </div>
            }
        </div>

        <!-- Resumen de Pago -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg sticky-payment-card">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="m-0 fw-bold"><i class="bi bi-credit-card me-2"></i>Resumen de Pago</h5>
                </div>
                <div class="card-body">
                    @if (lista.Any())
                    {
                        <EditForm Model="tarjeta" OnValidSubmit="ProcesarPago">
                            <DataAnnotationsValidator></DataAnnotationsValidator>

                            <!-- Resumen -->
                            <div class="payment-summary">
                                <div class="summary-row">
                                    <span>Subtotal:</span>
                                    <span class="summary-value">S/. @(lista.Sum(i => i.Total))</span>
                                </div>
                                <div class="summary-row">
                                    <span>Envío:</span>
                                    <span class="summary-value shipping-free">Gratis</span>
                                </div>
                                <div class="summary-row total-row">
                                    <strong>Total a pagar:</strong>
                                    <strong class="total-amount">S/. @(lista.Sum(i => i.Total))</strong>
                                </div>
                            </div>

                            <!-- Datos de Tarjeta -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre del Titular</label>
                                <input type="text" class="form-control" placeholder="Juan Pérez" @bind-value="tarjeta.Titular" disabled="@disabled">
                                <ValidationMessage For="@(()=>tarjeta.Titular)" class="text-danger small" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Número de Tarjeta</label>
                                <input type="text" class="form-control" placeholder="0000 0000 0000 0000" autocomplete="off" @bind-value="tarjeta.Numero" disabled="@disabled" maxlength="16">
                                <ValidationMessage For="@(()=>tarjeta.Numero)" class="text-danger small" />
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Vigencia</label>
                                        <input type="text" class="form-control" placeholder="MM/YY" autocomplete="off" @bind-value="tarjeta.Vigencia" disabled="@disabled">
                                        <ValidationMessage For="@(()=>tarjeta.Vigencia)" class="text-danger small" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">CVV</label>
                                        <input type="text" class="form-control" placeholder="123" autocomplete="off" @bind-value="tarjeta.CVV" disabled="@disabled" maxlength="3">
                                        <ValidationMessage For="@(()=>tarjeta.CVV)" class="text-danger small" />
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-danger btn-lg w-100 fw-bold mt-4" disabled="@disabled">
                                <i class="bi bi-lock-fill me-2"></i>Procesar Pago Seguro
                            </button>
                        </EditForm>

                        <div class="security-badge">
                            <i class="bi bi-shield-check"></i> Pago 100% seguro
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <p>Agrega productos al carrito para continuar</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationState { get; set; }
    private bool disabled = true;

    private List<CarritoDTO> lista = new List<CarritoDTO>();
    private TarjetaDTO tarjeta = new TarjetaDTO();

    protected override async Task OnInitializedAsync()
    {
        lista = await carritoServicio.DevolverCarrito();

        if (authenticationState != null)
        {
            var authState = await authenticationState;
            if (authState?.User.Identity?.IsAuthenticated == true)
                disabled = false;
        }
    }

    private void Disminuir(int id)
    {
        var item = lista.FirstOrDefault(i => i.Producto?.IdProducto == id);

        if (item != null && item.Cantidad - 1 > 0)
        {
            item.Cantidad--;
            item.Total = item.Cantidad * item.Precio;
        }
    }

    private void Aumentar(int id)
    {
        var item = lista.FirstOrDefault(i => i.Producto?.IdProducto == id);
        if (item != null)
        {
            item.Cantidad++;
            item.Total = item.Cantidad * item.Precio;
        }
    }

    private async Task Eliminar(int idproducto)
    {
        var producto = lista.FirstOrDefault(i => i.Producto?.IdProducto == idproducto);
        if (producto != null)
        {
            lista.Remove(producto);
            await carritoServicio.EliminarCarrito(idproducto);
        }
    }

    private async Task ProcesarPago()
    {
        if (lista.Count == 0)
        {
            toastService.ShowWarning("No se encontraron productos");
            return;
        }

        var detalle = new List<DetalleVentaDTO>();

        foreach (var item in lista)
        {
            if (item.Producto != null)
            {
                detalle.Add(new DetalleVentaDTO()
                    {
                        IdProducto = item.Producto.IdProducto,
                        Cantidad = item.Cantidad,
                        Total = item.Total
                    });
            }
        }

        VentaDTO modelo = new VentaDTO()
            {
                IdPersona = 1,
                Total = lista.Sum(i => i.Total),
                DetalleVenta = detalle
            };

        var response = await ventaServicio.Registrar(modelo);

        if (response?.EsCorrecto == true)
        {
            await carritoServicio.LimpiarCarrito();
            toastService.ShowSuccess("Venta registrada");
            _navServicio.NavigateTo("/catalogo");
        }
        else if (response != null)
        {
            toastService.ShowError(response.Mensaje ?? "Error procesando el pago");
        }
    }
}
