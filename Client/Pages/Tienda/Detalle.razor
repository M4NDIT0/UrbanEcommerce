@page "/detalle/{Id:int}"
@layout TiendaLayout
@using BlazorEcommerce.Shared
@using BlazorEcommerce.Client.Servicios

@inject IProductoServicio productoServicio;
@inject ICarritoServicio carritoServicio;

<div class="container py-5">
    @if (modelo != null)
    {
        <div class="row g-4">
            <!-- Imagen del Producto (Izquierda) -->
            <div class="col-lg-6 d-flex align-items-center">
                <div class="product-image-container w-100">
                    <img class="img-fluid rounded shadow-lg" src="@imagenActual" alt="@modelo.Nombre" style="max-height: 600px; object-fit: cover; width: 100%;">
                </div>
            </div>

            <!-- Detalles del Producto (Derecha) -->
            <div class="col-lg-6">
                <!-- Nombre -->
                <h1 class="display-4 fw-bold text-dark mb-3">@modelo.Nombre</h1>

                <!-- Precios -->
                <div class="pricing-section mb-4 p-4 bg-light rounded-3">
                    @if (modelo.PrecioOferta != 0 && modelo.PrecioOferta < modelo.Precio)
                    {
                        <div class="d-flex align-items-baseline gap-3 mb-2">
                            <span class="text-muted text-decoration-line-through fs-5">S/. @modelo.Precio</span>
                            <span class="badge bg-danger fs-6">En Oferta</span>
                        </div>
                        <h2 class="text-danger fw-bold">S/. @modelo.PrecioOferta</h2>
                    }
                    else
                    {
                        <h2 class="text-danger fw-bold">S/. @modelo.Precio</h2>
                    }
                </div>

                <!-- Descripción -->
                <p class="fs-5 text-muted mb-4 lh-lg">@modelo.Descripcion</p>

                <!-- Selector de Colores -->
                @if (modelo.Variantes != null && modelo.Variantes.Any())
                {
                    <div class="color-selector mb-4 p-3 border rounded-3">
                        <h5 class="mb-3">Colores Disponibles:</h5>
                        <div class="d-flex flex-wrap gap-3">
                            @foreach (var variante in modelo.Variantes.Where(v => v.Activo))
                            {
                                <div class="color-option @(varianteSeleccionada?.IdVariante == variante.IdVariante ? "selected" : "")" 
                                     @onclick="() => SeleccionarVariante(variante)">
                                    <div class="color-circle" 
                                         style="background-color: @variante.CodigoHex;"
                                         title="@variante.NombreColor">
                                    </div>
                                    <small class="d-block text-center mt-1">@variante.NombreColor</small>
                                    <small class="text-muted d-block text-center">Stock: @variante.Stock</small>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Cantidad y Botones -->
                <div class="action-section mb-4">
                    <div class="input-group mb-3" style="max-width: 150px;">
                        <button class="btn btn-outline-danger" type="button" @onclick="() => DecantidadClick()">
                            <i class="bi bi-dash-lg"></i>
                        </button>
                        <input type="number" class="form-control text-center fw-bold" @bind-value="cantidad" min="1">
                        <button class="btn btn-outline-danger" type="button" @onclick="() => IncrementarClick()">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="d-grid gap-3 d-md-flex">
                        <button class="btn btn-danger btn-lg px-5 fw-bold flex-md-grow-1" type="button" @onclick="(async() => await AgregarCarrito(modelo))">
                            <i class="fa-solid fa-shopping-cart me-2"></i>
                            Agregar al Carrito
                        </button>
                        <a class="btn btn-outline-danger btn-lg px-5 fw-bold" href="/catalogo">
                            <i class="bi bi-arrow-left me-2"></i>
                            Volver
                        </a>
                    </div>
                </div>

                <!-- Stock Info -->
                <div class="alert alert-info rounded-3 p-3">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Stock Disponible:</strong> @stockDisponible unidades
                    @if (varianteSeleccionada != null)
                    {
                        <span class="ms-2">(Color: @varianteSeleccionada.NombreColor)</span>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-danger" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private ProductoDTO? modelo = null;
    private ProductoVarianteDTO? varianteSeleccionada = null;
    private int cantidad = 1;
    private string imagenActual = "";
    private int stockDisponible = 0;

    protected override async Task OnParametersSetAsync()
    {
        var response = await productoServicio.Obtener(Id);
        if (response.EsCorrecto)
        {
            modelo = (ProductoDTO)response.Resultado!;
            imagenActual = modelo.Imagen ?? "";
            stockDisponible = modelo.Cantidad ?? 0;

            // Si tiene variantes, seleccionar la primera por defecto
            if (modelo.Variantes != null && modelo.Variantes.Any())
            {
                var primeraVariante = modelo.Variantes.FirstOrDefault(v => v.Activo);
                if (primeraVariante != null)
                {
                    SeleccionarVariante(primeraVariante);
                }
            }
        }
    }

    private void SeleccionarVariante(ProductoVarianteDTO variante)
    {
        varianteSeleccionada = variante;
        stockDisponible = variante.Stock;

        // Cambiar imagen a la principal de la variante
        if (variante.Imagenes != null && variante.Imagenes.Any())
        {
            var imagenPrincipal = variante.Imagenes.FirstOrDefault(i => i.EsPrincipal);
            imagenActual = imagenPrincipal?.Url ?? variante.Imagenes.FirstOrDefault()?.Url ?? modelo?.Imagen ?? "";
        }
        else
        {
            imagenActual = modelo?.Imagen ?? "";
        }

        // Resetear cantidad si excede el stock
        if (cantidad > stockDisponible)
        {
            cantidad = 1;
        }
    }

    private void IncrementarClick()
    {
        if (cantidad < stockDisponible)
            cantidad++;
    }

    private void DecantidadClick()
    {
        if (cantidad > 1)
            cantidad--;
    }

    private async Task AgregarCarrito(ProductoDTO modelo)
    {
        decimal? precioFinal = (modelo.PrecioOferta != 0 && modelo.PrecioOferta < modelo.Precio) ? modelo.PrecioOferta : modelo.Precio;
        CarritoDTO carrito = new CarritoDTO()
            {
                Producto = modelo,
                Cantidad = cantidad,
                Precio = precioFinal,
                Total = Convert.ToDecimal(cantidad) * precioFinal,
                IdVariante = varianteSeleccionada?.IdVariante,
                ColorSeleccionado = varianteSeleccionada?.NombreColor
            };
        await carritoServicio.AgregarCarrito(carrito);
    }
}
