@page "/"
@page "/catalogo"
@layout TiendaLayout
@inject IProductoServicio productoServicio;
@inject ICategoriaServicio categoriaServicio;
@inject NavigationManager navManager
@inject IJSRuntime JSRuntime


<Carousel />

<div class="container-fluid py-4">
    <!-- Barra de Búsqueda -->
    <div class="row justify-content-center mb-5">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control border-danger" placeholder="Buscar producto..." @bind-value="buscar" style="border-width: 2px;">
                <button class="btn btn-danger fw-bold px-4" type="button" @onclick="(async () => await  ObtenerCatalogo())">
                    <i class="bi bi-search me-2"></i>Buscar
                </button>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Sidebar Categorías (Izquierda) -->
        <div class="col-lg-3">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="m-0 fw-bold">
                        <i class="bi bi-tag-fill me-2"></i>Filtrar por Categoría
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (listaCategoria != null)
                    {
                        <div class="list-group list-group-flush">
                            <!-- Opción Todos -->
                            <label class="list-group-item list-group-item-action category-item p-3 cursor-pointer">
                                <div class="form-check m-0">
                                    <input class="form-check-input" type="radio" name="categoria" id="Todos" value="Todos"
                                    @onchange="RadioSeleccion"
                                        checked=@(categoriaSeleccionada.Equals("Todos", StringComparison.OrdinalIgnoreCase))>
                                    <label class="form-check-label w-100 ms-2" for="Todos">
                                        Todos los Productos
                                    </label>
                                </div>
                            </label>

                            <!-- Categorías -->
                            @foreach (var item in listaCategoria)
                            {
                                <label class="list-group-item list-group-item-action category-item p-3 cursor-pointer">
                                    <div class="form-check m-0">
                                        <input class="form-check-input" type="radio" name="categoria" id="@item.IdCategoria" value="@item.Nombre"
                                    @onchange="RadioSeleccion"
                                            checked=@(categoriaSeleccionada.Equals(item.Nombre,StringComparison.OrdinalIgnoreCase))>
                                        <label class="form-check-label w-100 ms-2" for="@item.IdCategoria">
                                            <i class="bi bi-check-circle-fill me-2 text-danger" style="display: @(categoriaSeleccionada.Equals(item.Nombre, StringComparison.OrdinalIgnoreCase) ? "inline" : "none")"></i>
                                            @item.Nombre
                                        </label>
                                    </div>
                                </label>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <div class="spinner-border text-danger" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Grid de Productos (Derecha) -->
        <div class="col-lg-9">
            <div class="row gx-4 row-cols-1 row-cols-md-3 row-cols-xl-4 justify-content-start">
                @if (listaProducto != null)
                {
                    foreach (var item in listaProducto)
                    {
                        <div class="col mb-5">
                            <div class="card border-0 shadow-sm h-100 transition-transform">
                                <!-- Badge "Nuevo" -->
                                @if (item.FechaCreacion.HasValue && DateTime.Now < item.FechaCreacion.Value.AddDays(30))
                                {
                                    <span class="badge bg-danger position-absolute top-0 end-0 m-3">Nuevo</span>
                                }
                            
                                <!-- Imagen del Producto -->
                                <img class="card-img-top" src="@item.Imagen" alt="@item.Nombre" style="height: 250px; object-fit: cover;">
                                
                                <!-- Detalles del Producto -->
                                <div class="card-body">
                                    <h5 class="card-title fw-bold text-truncate">@item.Nombre</h5>
                                    
                                    <!-- Precios -->
                                    <div class="mb-3">
                                        @if (item.PrecioOferta != 0 && item.PrecioOferta < item.Precio)
                                        {
                                            <span class="text-decoration-line-through text-muted">S/. @item.Precio</span>
                                            <br />
                                            <span class="h5 text-danger fw-bold">S/. @item.PrecioOferta</span>
                                        }
                                        else
                                        {
                                            <span class="h5 text-danger fw-bold">S/. @item.Precio</span>
                                        }
                                    </div>
                                </div>
                            
                                <!-- Acciones -->
                                <div class="card-footer bg-white border-top">
                                    <a class="btn btn-outline-danger w-100 fw-bold" href="/detalle/@item.IdProducto">
                                        <i class="bi bi-eye me-2"></i>Ver Producto
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-danger" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {


    private List<CategoriaDTO>? listaCategoria = null;
    private List<ProductoDTO>? listaProducto = null;
    private string buscar = "";
    private string categoriaSeleccionada = "Todos";

    private async Task ObtenerCategorias(string Valor = "")
    {
        var response = await categoriaServicio.Lista(Valor);

        if (response.EsCorrecto)
        {
            listaCategoria = (List<CategoriaDTO>)response.Resultado!;
        }
        else
        {
            listaCategoria = new List<CategoriaDTO>();
        }
    }
    private async Task ObtenerCatalogo()
    {
        var response = await productoServicio.Catalogo(categoriaSeleccionada, buscar);

        if (response.EsCorrecto)
        {
            listaProducto = (List<ProductoDTO>)response.Resultado!;
        }
        else
        {
            listaProducto = new List<ProductoDTO>();
        }
    }

    private async Task RadioSeleccion(ChangeEventArgs args)
    {
        // Make args.Value conversion null-safe. If null, default to "Todos".
        categoriaSeleccionada = args?.Value?.ToString() ?? "Todos";
        buscar = "";
        await ObtenerCatalogo();
    }

    protected override async Task OnInitializedAsync()
    {
        await ObtenerCategorias();
        await ObtenerCatalogo();
    }
}
