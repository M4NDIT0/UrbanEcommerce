@page "/login"
@using BlazorEcommerce.Client.Extensiones;
@using Microsoft.AspNetCore.Components.Authorization;
@layout LoginLayout
@inject IPersonaServicio _personaServicio
@inject NavigationManager _navServicio
@inject IToastService toastService
@inject AuthenticationStateProvider autenticacionProvider

<div class="login-container">
    <div class="login-wrapper">
        
        <!-- Left Side - Branding -->
        <div class="login-branding">
            <div class="branding-content">
                <div class="brand-logo">
                    <i class="bi bi-bag-fill"></i>
                </div>
                <h1 class="brand-title">Urban Ecommerce</h1>
                <p class="brand-subtitle">Tu tienda online de confianza</p>
                
                <div class="brand-features">
                    <div class="feature-item">
                        <i class="bi bi-lightning-fill"></i>
                        <span>Rápido y Seguro</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-shield-check"></i>
                        <span>100% Protegido</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-truck"></i>
                        <span>Envío Gratis</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-form-container">
            <div class="login-card">
                
                <div class="login-header">
                    <h2 class="login-title">Bienvenido</h2>
                    <p class="login-subtitle">Inicia sesión en tu cuenta</p>
                </div>

                <EditForm Model="modelo" OnValidSubmit="Iniciar" class="login-form">
                    <DataAnnotationsValidator></DataAnnotationsValidator>

                    <!-- Email Input -->
                    <div class="form-group">
                        <label for="inputEmail" class="form-label">
                            <i class="bi bi-envelope"></i> Correo
                        </label>
                        <input id="inputEmail" class="form-control login-input" type="email" placeholder="tu@email.com" @bind-value="modelo.Correo" autocomplete="off" />
                        <ValidationMessage For="@(()=>modelo.Correo)" class="text-danger small" />
                    </div>

                    <!-- Password Input -->
                    <div class="form-group">
                        <label for="inputPassword" class="form-label">
                            <i class="bi bi-lock"></i> Contraseña
                        </label>
                        <input id="inputPassword" class="form-control login-input" type="password" placeholder="••••••••" @bind-value="modelo.Clave" autocomplete="off" />
                        <ValidationMessage For="@(()=>modelo.Clave)" class="text-danger small" />
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="form-options">
                        <label class="remember-me">
                            <input type="checkbox" />
                            <span>Recuérdame</span>
                        </label>
                        <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-login">
                        <i class="bi bi-box-arrow-in-right"></i> Ingresar
                    </button>
                </EditForm>

                <!-- Divider -->
                <div class="divider">
                    <span>¿No tienes cuenta?</span>
                </div>

                <!-- Sign Up Link -->
                <a href="/registrarse" class="btn btn-signup">
                    <i class="bi bi-person-plus"></i> Crear Cuenta
                </a>

                <!-- Footer Info -->
                <div class="login-footer">
                    <p class="footer-text">
                        Al ingresar, aceptas nuestros
                        <a href="#">Términos</a> y
                        <a href="#">Privacidad</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginDTO modelo = new LoginDTO();

    private async Task Iniciar()
    {
        var response = await _personaServicio.Autorizacion(modelo);

        if (response.EsCorrecto)
        {
            SesionDTO sesion = (SesionDTO)response.Resultado!;

            var autenticacionExt = (AutenticacionExtension)autenticacionProvider;
            await autenticacionExt.ActualizarEstadoAutenticacion(sesion);

            if (sesion.Rol?.ToLower() == "cliente")
                _navServicio.NavigateTo("/catalogo");
            else
                _navServicio.NavigateTo("/dashboard");
        }
        else
        {
            toastService.ShowWarning(response.Mensaje!);
        }
    }
}
