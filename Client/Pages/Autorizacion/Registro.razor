@page "/registrarse"
@layout LoginLayout
@inject IPersonaServicio _personaServicio
@inject NavigationManager _navServicio
@inject IToastService toastService

<div class="registro-container">
    <div class="registro-card">
        
        <div class="registro-header">
            <h2 class="registro-title">Crear Cuenta</h2>
            <p class="registro-subtitle">Únete a Urban Ecommerce</p>
        </div>

        <EditForm Model="modelo" OnValidSubmit="GuardarCambios" class="registro-form">
            <DataAnnotationsValidator></DataAnnotationsValidator>

            <!-- Nombre Completo -->
            <div class="form-group">
                <label for="inputNombre" class="form-label">
                    <i class="bi bi-person"></i> Nombre Completo
                </label>
                <input id="inputNombre" class="form-control registro-input" type="text" placeholder="Juan García" @bind-value="modelo.NombreCompleto" autocomplete="off" />
                <ValidationMessage For="@(()=>modelo.NombreCompleto)" class="text-danger small" />
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="inputEmail" class="form-label">
                    <i class="bi bi-envelope"></i> Correo
                </label>
                <input id="inputEmail" class="form-control registro-input" type="email" placeholder="tu@email.com" @bind-value="modelo.Correo" autocomplete="off" />
                <ValidationMessage For="@(()=>modelo.Correo)" class="text-danger small" />
            </div>

            <!-- Contraseña y Confirmar -->
            <div class="row" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="form-group">
                    <label for="inputPassword" class="form-label">
                        <i class="bi bi-lock"></i> Contraseña
                    </label>
                    <input id="inputPassword" class="form-control registro-input" type="password" placeholder="••••••••" @bind-value="modelo.Clave" autocomplete="off" />
                    <ValidationMessage For="@(()=>modelo.Clave)" class="text-danger small" />
                </div>

                <div class="form-group">
                    <label for="inputPasswordConfirm" class="form-label">
                        <i class="bi bi-lock-check"></i> Confirmar
                    </label>
                    <input id="inputPasswordConfirm" class="form-control registro-input" type="password" placeholder="••••••••" @bind-value="modelo.ConfirmarClave" autocomplete="off" />
                    <ValidationMessage For="@(()=>modelo.ConfirmarClave)" class="text-danger small" />
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-registro" style="margin-top: 1rem;">
                <i class="bi bi-person-plus"></i> Registrarse
            </button>
        </EditForm>

        <!-- Divider -->
        <div class="divider" style="margin: 1.5rem 0;">
            <span>¿Ya tienes cuenta?</span>
        </div>

        <!-- Login Link -->
        <a href="/login" class="btn btn-login-link">
            <i class="bi bi-box-arrow-in-left"></i> Ir a Login
        </a>

        <!-- Footer Info -->
        <div class="registro-footer">
            <p class="footer-text">
                Al registrarte, aceptas nuestros
                <a href="#">Términos</a> y
                <a href="#">Privacidad</a>
            </p>
        </div>
    </div>
</div>

@code {
    private PersonaDTO modelo = new PersonaDTO();
    private async Task GuardarCambios()
    {
        if (modelo.Clave != modelo.ConfirmarClave)
        {
            toastService.ShowWarning("Las contraseñas no coinciden");
            return;
        }

        modelo.Rol = "Cliente";
        var response = await _personaServicio.Crear(modelo);
        if (response.EsCorrecto)
        {
            toastService.ShowSuccess("Su cuenta ha sido creada");
            _navServicio.NavigateTo("/login");
        }
        else
        {
            toastService.ShowError("No se pudo crear su cuente, intente más tarde");
        }

            
    }
}
