@inject IJSRuntime JSRuntime

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="width: 100%; margin-bottom: 2rem;">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/imagen1.jpg" class="d-block w-100" alt="Oferta especial" style="height: 450px; object-fit: cover; object-position: center;">
            <div class="carousel-caption d-none d-md-block" style="background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0)); padding-bottom: 4rem;">
                <h5 style="font-size: 2.5rem; font-weight: 800; text-shadow: 2px 2px 4px rgba(0,0,0,0.5); margin-bottom: 1rem;">Ofertas Especiales</h5>
                <p style="font-size: 1.2rem; font-weight: 500; text-shadow: 1px 1px 3px rgba(0,0,0,0.5); margin-bottom: 1.5rem;">Descubre nuestras mejores ofertas del mes.</p>
                <a href="#catalogo-section" class="btn btn-danger btn-lg" style="margin-right: 1rem; padding: 12px 35px; font-weight: 600;">Ver Productos</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/slide2.jpg" class="d-block w-100" alt="Nuevos productos" style="height: 450px; object-fit: cover; object-position: center;">
            <div class="carousel-caption d-none d-md-block" style="background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0)); padding-bottom: 4rem;">
                <h5 style="font-size: 2.5rem; font-weight: 800; text-shadow: 2px 2px 4px rgba(0,0,0,0.5); margin-bottom: 1rem;">Nuevos Productos</h5>
                <p style="font-size: 1.2rem; font-weight: 500; text-shadow: 1px 1px 3px rgba(0,0,0,0.5); margin-bottom: 1.5rem;">Explora nuestra última colección.</p>
                <a href="#catalogo-section" class="btn btn-danger btn-lg" style="margin-right: 1rem; padding: 12px 35px; font-weight: 600;">Explorar Ahora</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/slide3.jpg" class="d-block w-100" alt="Categorías destacadas" style="height: 450px; object-fit: cover; object-position: center;">
            <div class="carousel-caption d-none d-md-block" style="background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0)); padding-bottom: 4rem;">
                <h5 style="font-size: 2.5rem; font-weight: 800; text-shadow: 2px 2px 4px rgba(0,0,0,0.5); margin-bottom: 1rem;">Categorías Destacadas</h5>
                <p style="font-size: 1.2rem; font-weight: 500; text-shadow: 1px 1px 3px rgba(0,0,0,0.5); margin-bottom: 1.5rem;">Encuentra los mejores productos por categoría.</p>
                <a href="#catalogo-section" class="btn btn-danger btn-lg" style="margin-right: 1rem; padding: 12px 35px; font-weight: 600;">Ver Categorías</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev" style="background-color: transparent; width: 50px; left: 20px; border-radius: 6px;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next" style="background-color: transparent; width: 50px; right: 20px; border-radius: 6px;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initCarousel");
        }
    }
}
