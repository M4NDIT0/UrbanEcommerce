<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Logo/Branding -->
        <a class="navbar-brand" href="/">
            <i class="bi bi-shop"></i>
            <span class="brand-text">UrbanDemons</span>
        </a>

        <!-- Toggle Button para Mobile -->
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                title="Alternar navegación" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Contenido Navegable -->
        <div class="@NavMenuCssClass navbar-collapse d-lg-flex justify-content-between">
            <!-- Menu Principal (izquierda) -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <!-- Tienda Link -->
                <li class="nav-item">
                    <NavLink class="nav-link" href="catalogo" Match="NavLinkMatch.Prefix">
                        <i class="bi bi-shop-window"></i>
                        <span>Tienda</span>
                    </NavLink>
                </li>

                <!-- Admin Dropdown (solo para administradores) -->
                <AuthorizeView Roles="Usuario">
                    <Authorized>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i>
                                <span>Administración</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><NavLink class="dropdown-item white-text" href="dashboard">
                                    <i class="bi bi-speedometer2"></i>
                                    Dashboard
                                </NavLink></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><NavLink class="dropdown-item white-text" href="usuarios">
                                    <i class="bi bi-people"></i>
                                    Usuarios
                                </NavLink></li>
                                <li><NavLink class="dropdown-item white-text" href="categorias">
                                    <i class="bi bi-tag"></i>
                                    Categorías
                                </NavLink></li>
                                <li><NavLink class="dropdown-item white-text" href="productos">
                                    <i class="bi bi-box"></i>
                                    Productos
                                </NavLink></li>
                            </ul>
                        </li>
                    </Authorized>
                </AuthorizeView>
            </ul>

            <!-- Acciones Derechas (usuario, carrito, login) -->
            <div class="d-flex align-items-center gap-3">
                <!-- Email del Usuario (si está autenticado) -->
                <AuthorizeView>
                    <Authorized>
                        <div class="user-info">
                            <i class="bi bi-person-circle"></i>
                            <span class="user-email">@context.User.Claims.Where(c => c.Type == ClaimTypes.Email).Select(c => c.Value).FirstOrDefault()</span>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- Carrito -->
                <a href="/cart" class="nav-link cart-link" title="Ver carrito">
                    <i class="bi bi-cart-fill"></i>
                    <span class="cart-text">Carrito</span>
                    <span class="badge bg-danger cart-badge">@mostrarCantidadCarrito()</span>
                </a>

                <!-- Botones Autenticación -->
                <AuthorizeView>
                    <Authorized>
                        <!-- Dropdown Perfil y Configuración -->
                        <div class="nav-item dropdown">
                            <button class="btn btn-sm btn-outline-light dropdown-toggle user-menu-btn" 
                                    type="button" id="userMenuDropdown" data-bs-toggle="dropdown" 
                                    aria-expanded="false" title="Menú de usuario">
                                <i class="bi bi-person-gear"></i>
                                <span class="d-none d-lg-inline">Mi Cuenta</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuDropdown">
                                <li><NavLink class="dropdown-item" href="/perfil" title="Ir a mi perfil">
                                    <i class="bi bi-person"></i>
                                    Mi Perfil
                                </NavLink></li>
                                <li><NavLink class="dropdown-item" href="/mis-pedidos" title="Ver mis pedidos">
                                    <i class="bi bi-box-seam"></i>
                                    Mis Pedidos
                                </NavLink></li>
                                <li><NavLink class="dropdown-item" href="/configuracion" title="Configuración">
                                    <i class="bi bi-gear"></i>
                                    Configuración
                                </NavLink></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><button class="dropdown-item logout-item" type="button" 
                                            @onclick="CerrarSesion" title="Cerrar sesión">
                                    <i class="bi bi-box-arrow-right"></i>
                                    Salir
                                </button></li>
                            </ul>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a class="btn btn-sm btn-light fw-semibold login-btn" href="/login" title="Ir a login">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Iniciar sesión</span>
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private bool collapseMenuUser = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string? UserMenuCssClass => collapseMenuUser ? "show" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    private void ToggleMenuUser()
    {
        collapseMenuUser = !collapseMenuUser;
    }

    protected override void OnInitialized()
    {
        carritoServicio.ActualizarVista += StateHasChanged;
    }
    public void Dispose()
    {
        carritoServicio.ActualizarVista += StateHasChanged;
    }

    private int mostrarCantidadCarrito()
    {
        return carritoServicio.CantidadProductos();
    }
    private async Task CerrarSesion()
    {
        SweetAlertResult result = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Desea salir?",
                Icon = SweetAlertIcon.Info,
                ShowCancelButton = true,
                ConfirmButtonText = "Si",
                CancelButtonText = "No"
            });

        if (result.IsConfirmed)
        {
            var autenticacionExt = (AutenticacionExtension)autenticacionProvider;
            await autenticacionExt.ActualizarEstadoAutenticacion(null);
            _navigationManager.NavigateTo("/", true);
        }
    }
}
